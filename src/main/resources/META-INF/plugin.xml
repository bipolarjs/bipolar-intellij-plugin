<idea-plugin>
    <id>org.bipolar.intellijplugin</id>
    <name>Bipolar</name>
    <vendor>tihonove</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>JavaScript</depends>
    <depends>NodeJS</depends>
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <configurationType implementation="org.bipolar.mocha.execution.MochaConfigurationType"/>
        <programRunner implementation="org.bipolar.mocha.execution.MochaRunProgramRunner"/>
        <runConfigurationProducer implementation="org.bipolar.mocha.execution.MochaRunConfigurationProducer"/>
    </extensions>

</idea-plugin>
